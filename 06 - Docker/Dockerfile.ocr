FROM python:3.11-slim

WORKDIR /app

# 시스템 의존성 설치 (OpenCV 등)
RUN apt-get update && apt-get install -y \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Python 의존성 설치 (최상위 requirements.txt 사용)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ML/OCR 애플리케이션 코드 복사
COPY "05 - ML" .

# 포트 노출
EXPOSE 8001

# 서버 실행
CMD ["uvicorn", "ocr.ocr_api:app", "--host", "0.0.0.0", "--port", "8001", "--reload"]

